extends layout-slider

block slide

  .slide
    .slide__state

      //- Slide status
      //--------------
      +slide-status(currentSlide, slideNav)

    //- Slide title
    //-------------
    h1.slide__title!= currentSlide.title

    //- Slide picture
    //---------------
    .slide__img-wrapper

      img.slide__img(src="images/slides/#{currentSlide.picture}")

    //- Slide description
    //-------------------
    if currentSlide.description

      .slide__description!= currentSlide.description